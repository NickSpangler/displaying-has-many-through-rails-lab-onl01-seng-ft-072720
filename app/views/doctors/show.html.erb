<h1>Dr. <%= @doctor.name %></h1>
<br>
<h2>Appointments:</h2>
  <ol>
    <%= @doctor.appointments.each do |appointment| %>
      <li>
        <p>Date: <%= link_to "#{appointment.appointment_datetime.strftime("%B %d, %Y")} at #{appointment.appointment_datetime.strftime("%H:%M")}", appointment %>
           Patient: <%= link_to appointment.patient.name, appointment.patient %>
        </p>
      </li>
    <% end %>
  </ol>